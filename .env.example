# Agentic-AI 环境配置模板
# 复制此文件为 .env 并填入真实的配置值

# ===== 基础配置 =====
# 环境类型 (local/test/prod)
ENVIRONMENT=local

# 调试模式
DEBUG=true

# 日志级别 (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# ===== LLM 模型配置 =====
# 默认使用的 LLM 模型
# 支持的格式: openai:gpt-4, dashscope:qwen3-max, deepseek:deepseek-chat
NOBEL_LLM_MODEL=dashscope:qwen3-max

# ===== API Keys =====
# OpenAI API Key (用于 GPT 模型)
OPENAI_API_KEY=your_openai_api_key_here

# Dashscope API Key (用于 Qwen 模型)
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# DeepSeek API Key (用于 DeepSeek 模型)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# ===== 本地开发配置 =====
# 本地 aisuite 路径 (可选，用于使用本地克隆版本)
# AISUITE_PATH=/path/to/your/local/aisuite

# ===== 缓存配置 =====
# 启用缓存
ENABLE_CACHE=true

# 缓存目录
CACHE_DIR=.cache

# ===== API Key 管理配置 =====
# 启用 API Key 自动更新
ENABLE_API_KEY_AUTO_UPDATE=false

# API Key 加密密钥 (生产环境必须设置)
# API_KEY_ENCRYPTION_KEY=your_encryption_key_here

# ===== MCP 服务器配置 =====
# MCP 服务器端口
MCP_SERVER_PORT=3000

# MCP 服务器主机
MCP_SERVER_HOST=localhost

# ===== 数据和输出配置 =====
# 数据目录
DATA_DIR=data

# 输出目录
OUTPUT_DIR=outputs

# 工件目录
ARTIFACTS_DIR=artifacts

# ===== 性能配置 =====
# 并发请求数限制
MAX_CONCURRENT_REQUESTS=5

# 请求超时时间 (秒)
REQUEST_TIMEOUT=30

# ===== 安全配置 =====
# 启用请求验证
ENABLE_REQUEST_VALIDATION=true

# 允许的主机列表 (生产环境)
# ALLOWED_HOSTS=localhost,127.0.0.1

# ===== 监控和日志配置 =====
# 启用性能监控
ENABLE_PERFORMANCE_MONITORING=false

# 日志文件路径
LOG_FILE_PATH=logs/app.log

# 启用详细日志
ENABLE_VERBOSE_LOGGING=false